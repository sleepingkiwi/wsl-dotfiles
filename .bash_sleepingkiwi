# custom functionality for bash.
# loaded into .bashrc
# -
# source: https://github.com/sleepingkiwi/wsl-dotfiles


# run on launch
# --------------------------------------------------------------------------------------------------

# awww that's sweet
echo "Hi $USER, welcome back. I've really missed you buddy."


# aliases
# --------------------------------------------------------------------------------------------------

alias dev-sync='bash ~/.dotfiles/_wsl-dev-sync.sh'

alias rm='echo "you should probably use trash-put instead. if you really want to use rm then use \\rm"'


# some general configuration and settings
# --------------------------------------------------------------------------------------------------

# Tell grep to highlight matches
export GREP_OPTIONS='--color=auto'
